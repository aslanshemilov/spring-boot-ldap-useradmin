<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are assigned the type
             ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%.23(%thread)] %highlight(%5level) %logger{20}  %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.springframework.ldap.core.LdapTemplate" level="debug" />
    <logger name="org.springframework.ldap.support.LdapUtils    " level="debug" />

    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
